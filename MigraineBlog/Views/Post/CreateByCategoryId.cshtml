@model MigraineBlog.Models.Post
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreateByCategoryId</title>
    <link href="~/css/CrudSheet.css" rel="stylesheet" />
</head>
<body>
    <div class="crudflexbox">
        <h4>Post on the "@ViewBag.CategoryName" Blog!</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Author" class="control-label"></label>
                        <input asp-for="Author" class="form-control" />
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>
                    <br />
                    <br />
                    <div class="form-group">
                        <div><label asp-for="Body" class="control-label"></label></div>
                        <textarea asp-for="Body" class="form-control" cols="30" rows="10"></textarea>
                        <span asp-validation-for="Body" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input value="@DateTime.Now.ToString("MM/dd/yyyy")" type="hidden" class="form-control" />
                    </div>
                    <div class="form-group">
                        @*<label asp-for="CategoryId" class="control-label"></label>*@
                        <input name="CategoryId" type="hidden" value=@ViewBag.CategoryId class="form-control" />
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TagId" class="control-label"></label>
                        @*<input asp-for="TagId" class="form-control" />
                        <span asp-validation-for="TagId" class="text-danger"></span>*@
                    <select name="TagId">
                        <option value="1">#BadDay</option>
                        <option value="2">#SOS</option>
                        <option value="3">#Relief</option>
                        <option value="4">#Triggers</option>
                        <option value="5">#Advice</option>
                    </select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a href="/Category/Details/@ViewBag.CategoryId">Back to List</a>
        </div>
    </div>

</body>
</html>

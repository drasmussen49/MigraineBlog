@model MigraineBlog.Models.Post
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete a Post</title>
    <link href="~/css/NavStyle.css" rel="stylesheet" />
    <link href="~/css/OverallStyle.css" rel="stylesheet" />
    <link href="~/css/CrudSheet.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Didact+Gothic|Hind+Vadodara:500|Rock+Salt|Walter+Turncoat&display=swap" rel="stylesheet">
</head>
<body>
    <div class="crudflexbox">
        <h3>Are you sure you wish to delete this post?</h3>
        <div>
            <h4>"@Model.Category.Name"</h4>
            <hr />
            <div class="form-group">
                <label class="control-label">Posted by:</label>
                <label class="control-label">@Model.Author</label>
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <dl class="row">
                <dt class="col-sm-2">
                    
                </dt>
                <dd class="col-sm-10">
                    <p>"@Html.DisplayFor(model => model.Body)"</p>
                </dd>
            </dl>
            <div>
                <form asp-action="Delete" method="post">
                    <input id="button" type="submit" value="Delete" class="btn btn-danger" />
                    <input type="hidden" value="@Model.CategoryId" asp-for="CategoryId" />
                    <a href="/Category/Details/@Model.CategoryId"><button id="button">Go Back</button></a>
                </form>
                
            </div>
        </div>
    </div>

    <nav>
        <a href="~/Home/Index"> HOME </a>
        <a href="~/Category/Index"> BLOGS </a>
        <a href="~/Home/Index/#aboutUs"> ABOUT </a>
    </nav>

</body>
</html>

@model MigraineBlog.Models.Post
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <link href="~/css/CrudSheet.css" rel="stylesheet" />
</head>
<body>
    <div class="crudflexbox">
        <h3>Are you sure you want to delete this blog post?</h3>
        <div>
            <h4>Post on "@Model.Category.Name" blog</h4>
            <hr />
            <div class="form-group">
                <label class="control-label">Blogger Name:</label>
                <label class="control-label">@Model.Author</label>
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <dl class="row">
                <dt class="col-sm-2">
                    <p>The Blog:</p>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Body)
                </dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <input type="hidden" value="@Model.CategoryId" asp-for="CategoryId" />
            </form>
            <br />
            <a href="/Category/Details/@Model.CategoryId">Go Back</a>
        </div>
    </div>
</body>
</html>

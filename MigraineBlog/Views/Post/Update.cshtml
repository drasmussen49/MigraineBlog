@model MigraineBlog.Models.Post
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit Post</title>
    <link href="~/css/NavStyle.css" rel="stylesheet" />
    <link href="~/css/OverallStyle.css" rel="stylesheet" />
    <link href="~/css/CrudSheet.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Didact+Gothic|Hind+Vadodara:500|Rock+Salt|Walter+Turncoat&display=swap" rel="stylesheet">
</head>
<body>
    <div class="crudflexbox">
        <h4>@Model.Category.Name</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Update">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        @*<label asp-for="Id" class="control-label"></label>*@
                        <input asp-for="Id" type="hidden" class="form-control" />
                        @*<span asp-validation-for="Id" class="text-danger"></span>*@
                    </div>
                    <div class="form-group">
                        <label asp-for="Author" class="control-label"></label>
                        <input asp-for="Author" disabled class="form-control" />
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <br />
                    <br />
                    <div class="form-group">
                        <div><label class="control-label">Blog post</label></div>
                        <textarea asp-for="Body" class="form-control" cols="30" rows="10"></textarea>
                        <span asp-validation-for="Body" class="text-danger"></span>
                    </div>
                    <div>
                        <input value="@DateTime.Now.ToString("MM/dd/yyyy")" type="hidden" class="form-control" />
                    </div>

                    <div class="form-group">
                        @*<label asp-for="CategoryId" class="control-label"></label>*@
                        <input asp-for="CategoryId" type="hidden" class="form-control" />
                        @*<span asp-validation-for="CategoryId" class="text-danger"></span>*@
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a href="/Category/Details/@Model.CategoryId">Back to Blog Posts</a>
        </div>
    </div>

    <nav>
        <a href="~/Home/Index"> HOME </a>
        <a href="~/Category/Index"> BLOGS </a>
        <a href="~/Home/Index/#aboutUs"> ABOUT </a>
    </nav>

</body>
</html>
